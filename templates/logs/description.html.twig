<table id="log" class="table table-striped table-bordered">
    <thead>
        <tr>
		    <td>Utente</td>
		    <td>Data</td>
		    <td>Vecchia descrizione</td>
		    <td>Nuova descrizione</td>
        </tr>
    </thead>
    <tbody>
        {% for d in data %}
			<tr>
				<td class="centered">{{ d.source.login }}</td>
                <td class="centered">{{ d.date|date("d/m/Y h:i A") }}</td>
                <td class="centered">{{ d.oldDescription }}</td>
				<td class="centered">{{ d.newDescription }}</td>
			</tr>
	    {% endfor %}
    </tbody>
</table>
<script>
    $(document).ready(function() {
    $('#log').DataTable();
</script>